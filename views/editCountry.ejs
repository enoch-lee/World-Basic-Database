<% include partials/header %>


<div class='container'>
    <div class='row'>
        <div style='text-align:center'>
            <h2>Edit <%= country %></h2>
        </div>
        <div style='width:30%; margin:30px auto'>
            <form action='/edit/country' method='POST'>
                <div class='form-group'>
                    <input id = 'countryName' class='form-control' type='text' name='name' readonly>
                </div>
                <div class='form-group'>
                    <input class='form-control' type='text' name='population' placeholder='Population'>
                </div>
                <div class='form-group'>
                    <input class='form-control' type='text' name='lifespan' placeholder='LifeExpectancy'>
                </div>
                <div class='form-group'>
                    <input class='form-control' type='number' name='gnp' placeholder='GNP'>
                </div>
                <div class='form-group'>
                    <button class='btn btn-primary btn-md btn-block'>Submit</button>
                </div>
            </form>
        <a href='/'>Back</a>
        </div>
    </div>
</div>

<script type="text/javascript" charset="utf8" src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>
<script>
	let countryName = <%- JSON.stringify(country) %>
	$('#countryName').attr('value', countryName);
</script>

<% include partials/footer %>
